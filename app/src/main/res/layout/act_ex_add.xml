<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_ex_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brioal.bills.add.ExAddActivity">
    <!--标题栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/ex_add_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="添加记录"
        app:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>
    <!--内容栏-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightWhite"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >
            <!--金额-->
            <EditText
                android:id="@+id/ex_add_et_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:hint="输入金额"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:padding="20dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorLightWhite"/>
            <!--是否是收入-->
            <Switch
                android:id="@+id/ex_add_switch_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="收入"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="用途/来源:"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
            <!--操作类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <com.brioal.labelview.LabelView
                    android:id="@+id/ex_add_label_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@color/colorPrimary">

                </com.brioal.labelview.LabelView>

            </LinearLayout>

            <!--备注-->
            <EditText
                android:id="@+id/ex_add_et_desb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorPrimary"
                android:gravity="top"
                android:hint="备注"
                android:imeOptions="actionNext"
                android:lines="2"
                android:padding="20dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorLightWhite"/>
            <!--资金类型提示-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="资金类型:"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <!--资金类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <com.brioal.labelview.LabelView
                    android:id="@+id/ex_add_label_asset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@color/colorPrimary">

                </com.brioal.labelview.LabelView>

            </LinearLayout>
            <!--提交按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="50dp">

                <Button
                    android:id="@+id/ex_add_btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/asset_add_btn_bg"
                    android:padding="10dp"
                    android:text="提交"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
